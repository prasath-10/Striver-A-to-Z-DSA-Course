class Solution {
    public int[] rearrangeArray(int[] nums) {
        int even=0;
        int odd=1;
        int[] ans=new int[nums.length];
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]<0)
            {
               ans[odd]=nums[i];
               odd=odd+2;
            }
            else
            {
                ans[even]=nums[i];
                even=even+2;
            }
        }
        return ans;
        
    }
}
