class Solution {
    int lowerBound(int[] arr, int target) {
        int start=0;
        int end=arr.length-1;
        int n=arr.length;
        while(start<=end)
        {
            int mid=(start+end)/2;
            if(arr[mid]>=target)
            {
                n=mid;
                end=mid-1;
            }
            else
            {
                start=mid+1;
            }
        }
        return n;
        
    }
}
