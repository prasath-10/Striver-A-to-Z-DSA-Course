class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int row=0;
        int coloumn=matrix[0].length-1;
        while(row<matrix.length && coloumn>=0)
        {
            if(matrix[row][coloumn]==target)
            {
                return true;
            }
            else if(matrix[row][coloumn]<target)
            {
                row++;
            }
            else
            {
                coloumn--;
            }
        }
        return false;
        
    }
}
